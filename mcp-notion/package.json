{
  "name": "@petaio/mcp-notion",
  "version": "1.1.0",
  "description": "A production-ready Notion MCP Server with full read/write capabilities for PETA integration",
  "main": "dist/stdio.js",
  "type": "module",
  "bin": {
    "petaio-mcp-notion": "./dist/stdio.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/stdio.ts",
    "start": "node dist/stdio.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "docker:build": "./build-docker.sh"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "notion",
    "notion-api",
    "server",
    "typescript",
    "claude",
    "ai",
    "peta"
  ],
  "author": "PETA Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@notionhq/client": "^2.2.15",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
