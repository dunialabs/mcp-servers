{
  "name": "@petaio/mcp-rest-gateway",
  "version": "1.0.1",
  "description": "REST API to MCP Server Gateway - Convert REST APIs to MCP tools through configuration",
  "main": "dist/stdio.js",
  "type": "module",
  "bin": {
    "peta-mcp-rest-gateway": "./dist/stdio.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/stdio.ts",
    "start": "node dist/stdio.js",
    "clean": "rm -rf dist",
    "test": "echo 'No tests defined yet' && exit 0",
    "test:watch": "vitest watch",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "draft:openapi": "tsx scripts/generate-draft.ts",
    "prepare": "npm run build",
    "docker:build": "./build-docker.sh",
    "docker:build:multi": "./build-docker.sh multi",
    "docker:push": "./build-docker.sh push",
    "docker:clean": "./build-docker.sh clean"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rest",
    "gateway",
    "api",
    "peta",
    "typescript",
    "claude",
    "ai",
    "stdio",
    "docker"
  ],
  "author": "PETA Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "dotenv": "^16.4.5",
    "undici": "^6.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.7.2",
    "vitest": "^4.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
