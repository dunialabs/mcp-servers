{
  "name": "@petaio/mcp-postgres",
  "version": "1.1.2",
  "description": "A production-ready PostgreSQL MCP Server with intelligent database management tools",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "petaio-mcp-postgres": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:esbuild": "node build.mjs",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "postgresql",
    "postgres",
    "database",
    "ai",
    "llm",
    "claude"
  ],
  "author": "PETA Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "dotenv": "^16.4.5",
    "pg": "^8.11.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "esbuild": "^0.27.0",
    "eslint": "^8.56.0",
    "glob": "^13.0.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
